create_table :core_goods, id: :bigserial do |t|
  t.integer :creation_id, limit: 8, null: false, default: 0
  t.integer :user_id, limit: 8, null: false, default: 0

  t.timestamps null: false
end

add_foreign_key :core_goods, :core_creations, column: 'creation_id', name: 'fk_goods_creations'
add_foreign_key :core_goods, :core_users, column: 'user_id', name: 'fk_goods_users'
