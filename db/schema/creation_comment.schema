create_table :manage_creation_comments, id: :bigserial do |t|
  t.string :sid, limit: 20, null: false, index: true, default: '0'
  t.references :creation, index: true, foreign_key: true
  t.references :user, index: true, foreign_key: true
  t.integer :parent_id, index: true, limit: 8
  t.string :notice_code, limit: 10

  t.timestamps null: false
end

add_foreign_key :manage_creation_comments, :manage_creation_comments, column: :parent_id, name: 'fk_creation_comments_parent'
