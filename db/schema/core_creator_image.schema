create_table :core_creator_images, id: :bigserial do |t|
  t.integer :creator_id, limit: 8, null: false, default: 0
  # Apache LimitRequestLine(default): 8190
  # max URL length available to IE: 2083
  t.string :image, limit: 2083
  t.boolean :in_use

  t.timestamps null: false
end

add_foreign_key :core_creator_images, :core_creators, column: 'creator_id', name: 'fk_creator_images_creators'
