create_table :core_creation_categories, id: :bigserial do |t|
  t.integer :creation_id, limit: 8, null: false, default: 0
  t.integer :category_id, limit: 8, null: false, default: 0

  t.timestamps null: false
end

add_foreign_key :core_creation_categories, :core_creations, column: 'creation_id', name: 'fk_creation_categories_creations'
add_foreign_key :core_creation_categories, :core_categories, column: 'category_id', name: 'fk_creation_categories_categories'
