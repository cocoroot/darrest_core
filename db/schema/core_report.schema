create_table :core_reports, id: :bigserial do |t|
  t.integer :creation_id, limit: 8, null: false, default: 0
  t.integer :user_id, limit: 8, null: false, default: 0
  t.string :title, limit: 200, null: false
  t.string :detail, limit: 10000

  t.timestamps null: false
end

add_foreign_key :core_reports, :core_creations, column: 'creation_id', name: 'fk_core_reports_creations'
add_foreign_key :core_reports, :core_users, column: 'user_id', name: 'fk_core_reports_users'
