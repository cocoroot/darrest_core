<p id="notice"><%= notice %></p>

<h1>Listing Site Users</h1>

<table>
  <thead>
    <tr>
      <th>Sid</th>
      <th>Site</th>
      <th>Biography</th>
      <th>Tos accepted</th>
      <th>Site user status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_users.each do |site_user| %>
      <tr>
        <td><%= site_user.sid %></td>
        <td><%= site_user.site %></td>
        <td><%= site_user.biography %></td>
        <td><%= site_user.tos_accepted %></td>
        <td><%= site_user.site_user_status %></td>
        <td><%= link_to 'Show', site_user %></td>
        <td><%= link_to 'Edit', edit_site_user_path(site_user) %></td>
        <td><%= link_to 'Destroy', site_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

