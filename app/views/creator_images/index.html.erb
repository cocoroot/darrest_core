<p id="notice"><%= notice %></p>

<h1>Listing Creator Images</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Image</th>
      <th>In use</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creator_images.each do |creator_image| %>
      <tr>
        <td><%= creator_image.creator %></td>
        <td><%= creator_image.image %></td>
        <td><%= creator_image.in_use %></td>
        <td><%= link_to 'Show', creator_image %></td>
        <td><%= link_to 'Edit', edit_creator_image_path(creator_image) %></td>
        <td><%= link_to 'Destroy', creator_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

