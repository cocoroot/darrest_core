<p id="notice"><%= notice %></p>

<h1>Listing Manage Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manage_categories.each do |manage_category| %>
      <tr>
        <td><%= manage_category.name %></td>
        <td><%= manage_category.parent_id %></td>
        <td><%= link_to 'Show', manage_category %></td>
        <td><%= link_to 'Edit', edit_manage_category_path(manage_category) %></td>
        <td><%= link_to 'Destroy', manage_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

