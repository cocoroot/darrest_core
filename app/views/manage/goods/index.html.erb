<p id="notice"><%= notice %></p>

<h1>Listing Manage Goods</h1>

<table>
  <thead>
    <tr>
      <th>Creation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manage_goods.each do |manage_good| %>
      <tr>
        <td><%= manage_good.creation %></td>
        <td><%= manage_good.user %></td>
        <td><%= link_to 'Show', manage_good %></td>
        <td><%= link_to 'Edit', edit_manage_good_path(manage_good) %></td>
        <td><%= link_to 'Destroy', manage_good, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

