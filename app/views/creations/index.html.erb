<p id="notice"><%= notice %></p>

<h1>Listing Creations</h1>

<table>
  <thead>
    <tr>
      <th>Sid</th>
      <th>Site user</th>
      <th>Title</th>
      <th>Description</th>
      <th>License code</th>
      <th>Creation status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creations.each do |creation| %>
      <tr>
        <td><%= creation.sid %></td>
        <td><%= creation.site_user %></td>
        <td><%= creation.title %></td>
        <td><%= creation.description %></td>
        <td><%= creation.license_code %></td>
        <td><%= creation.creation_status %></td>
        <td><%= link_to 'Show', creation %></td>
        <td><%= link_to 'Edit', edit_creation_path(creation) %></td>
        <td><%= link_to 'Destroy', creation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

