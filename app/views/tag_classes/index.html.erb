<p id="notice"><%= notice %></p>

<h1>Listing Tag Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_classes.each do |tag_class| %>
      <tr>
        <td><%= tag_class.name %></td>
        <td><%= link_to 'Show', tag_class %></td>
        <td><%= link_to 'Edit', edit_tag_class_path(tag_class) %></td>
        <td><%= link_to 'Destroy', tag_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

