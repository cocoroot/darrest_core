<p id="notice"><%= notice %></p>

<h1>Listing User Images</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>In user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_images.each do |user_image| %>
      <tr>
        <td><%= user_image.user %></td>
        <td><%= user_image.image %></td>
        <td><%= user_image.in_use %></td>
        <td><%= link_to 'Show', user_image %></td>
        <td><%= link_to 'Edit', edit_user_image_path(user_image) %></td>
        <td><%= link_to 'Destroy', user_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

