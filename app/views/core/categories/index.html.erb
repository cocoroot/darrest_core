<p id="notice"><%= notice %></p>

<h1>Listing Core Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @core_categories.each do |core_category| %>
      <tr>
        <td><%= core_category.name %></td>
        <td><%= core_category.parent %></td>
        <td><%= link_to 'Show', core_category %></td>
        <td><%= link_to 'Edit', edit_core_category_path(core_category) %></td>
        <td><%= link_to 'Destroy', core_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_core_category_path %>
