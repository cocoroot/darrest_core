<p id="notice"><%= notice %></p>

<h1>Listing Site User Images</h1>

<table>
  <thead>
    <tr>
      <th>Site user</th>
      <th>Image</th>
      <th>In use</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_user_images.each do |site_user_image| %>
      <tr>
        <td><%= site_user_image.site_user %></td>
        <td><%= site_user_image.image %></td>
        <td><%= site_user_image.in_use %></td>
        <td><%= site_user_image.order %></td>
        <td><%= link_to 'Show', site_user_image %></td>
        <td><%= link_to 'Edit', edit_site_user_image_path(site_user_image) %></td>
        <td><%= link_to 'Destroy', site_user_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

