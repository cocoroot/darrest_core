<p id="notice"><%= notice %></p>

<h1>Listing Creation Comments</h1>

<table>
  <thead>
    <tr>
      <th>Sid</th>
      <th>Creation</th>
      <th>User</th>
      <th>Parent</th>
      <th>Notice code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creation_comments.each do |creation_comment| %>
      <tr>
        <td><%= creation_comment.sid %></td>
        <td><%= creation_comment.creation %></td>
        <td><%= creation_comment.user %></td>
        <td><%= creation_comment.parent %></td>
        <td><%= creation_comment.notice_code %></td>
        <td><%= link_to 'Show', creation_comment %></td>
        <td><%= link_to 'Edit', edit_creation_comment_path(creation_comment) %></td>
        <td><%= link_to 'Destroy', creation_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

